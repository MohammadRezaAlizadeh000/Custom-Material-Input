<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="30sp"
            android:text="SIMPLE STYLE"

            android:gravity="center" />

        <com.example.cif.MainEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"

            app:hint="small"
            app:size="SMALL" />

        <com.example.cif.MainEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:hint="normal"

            app:isMandatory="true"
            app:size="NORMAL" />

        <com.example.cif.MainEditText
            android:id="@+id/bigInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:hint="big"

            app:isMandatory="true"
            app:size="BIG" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="ICON STYLE"
            android:textSize="30sp"

            android:gravity="center" />

        <com.example.cif.MainEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"

            app:hint="small"
            app:size="SMALL"
            app:style="ICON"
            app:rightIcon="@drawable/ic_email_outline"/>

        <com.example.cif.MainEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:hint="normal"

            app:isMandatory="false"
            app:size="NORMAL"
            app:style="ICON"
            app:rightIcon="@drawable/ic_email_outline"/>

        <com.example.cif.MainEditText
            android:id="@+id/bigInputIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:hint="big"

            app:isMandatory="true"
            app:size="BIG"
            app:style="ICON"
            app:rightIcon="@drawable/ic_email_outline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="PASSWORD STYLE"
            android:textSize="30sp"

            android:gravity="center" />

        <com.example.cif.MainEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"

            app:hint="small"
            app:size="SMALL"
            app:style="PASS"
            app:rightIcon="@drawable/ic_email_outline"/>

        <com.example.cif.MainEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:hint="normal"

            app:isMandatory="false"
            app:size="NORMAL"
            app:style="PASS"
            app:rightIcon="@drawable/ic_email_outline"/>

        <com.example.cif.MainEditText
            android:id="@+id/bigInputPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:hint="big"

            app:isMandatory="true"
            app:size="BIG"
            app:style="PASS"
            app:rightIcon="@drawable/ic_email_outline"/>
    </LinearLayout>
</ScrollView>